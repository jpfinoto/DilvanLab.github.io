function montafolhashop( arrOfertas ){arrOfertas = break_array(arrOfertas);var saida = "";var i = 0;var iLimit = arrOfertas.length;var x = 0;var LastOne = false;var FirstOne = false;for (var i = 0; i < iLimit; i++){if ( arrOfertas[i] ){x = choose(arrOfertas[i].length);if ( arrOfertas[i][x] != null ){LastOne = ( i == (arrOfertas.length - 1) );saida += html_monta( arrOfertas[i][x][0], arrOfertas[i][x][1], arrOfertas[i][x][2], LastOne);}}}return saida;}function break_array( arrOfertas ){var saida = new Array();var indice = 0, i = 0, y = 0;for ( i; i < arrOfertas.length; i++ ){x = arrOfertas[i][0];if ( x > 0 ){x = x - 1;if (!saida[x]){saida[x] = new Array();}saida[x][ saida[x].length ] = new Array(arrOfertas[i][1], arrOfertas[i][2], arrOfertas[i][3]);}}return saida;}function choose(elements){return Math.floor(Math.random() * elements);}function html_monta(loja, link, texto, ultimo){var saida = "";saida += '<tr>';if ( ultimo ){saida += '<td height="54" class="shoppingBarTop"><b>';}else{saida += '<td height="53" class="shoppingBar"><b>';}saida += loja;saida += '</b><br><a href="http://links.folha.com.br/redir.html?url=';saida += link;saida += '" target="_blank" class="shoppingBarItem"><font size="1">';saida += texto;saida += '</font></a></td></tr>';return saida;}function html_pre(){var saida = "";saida += '<table width="100%" border="0" cellpadding="1" cellspacing="0" bgcolor="#000000"><tr><td><table width="100%" border="0" cellpadding="0" cellspacing="0" bgcolor="#ffffff">';saida += '<tr>';saida += '<td height="54" align="center" class="shoppingBar"><a href="http://www1.folha.uol.com.br/folha/folhashop/" target="_top"><img src="http://f.i.uol.com.br/folha/furniture/shopping/images/lgo-folhashop-105x32.gif" width="105" height="32" border="0" alt="FolhaShop"></a></td>';saida += '</tr>';return  saida;}function html_pos(){var saida = "";saida += '</table>';saida += '</td></tr></table>';return  saida;}if ( ofertas != null ){document.write( html_pre() );document.write( montafolhashop(ofertas) );document.write( html_pos() );}